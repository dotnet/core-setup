<Project>

  <!--
    Display an error if no projects will be built. Echo back the Subset variable if set: a typo in
    that variable is the only anticipated way to hit this situation.
  -->
  <Target Name="Build">
    <PropertyGroup>
      <Message>No ProjectToBuild items found</Message>
      <Message Condition="'$(Subset)' != ''">$(Message) in subset matching '$(Subset)'</Message>
    </PropertyGroup>

    <Error Text="$(Message)." />
  </Target>

</Project>
