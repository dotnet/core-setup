<Project>

  <!--
    Starting with 3.0, Microsoft.NETCore.App (MNA) is a dummy package, no longer providing any build
    or runtime assets. For compatibility with existing tests, Microsoft.NETCore.App.Insertion (MNAI)
    now exists as an internal compatibility package. It contains the assets MNA used to have.

    Inject the MNAI package with an opportunity to disable for non-3.0 projects.
  -->
  <PropertyGroup>
    <UseMicrosoftNETCoreAppInsertionWorkaround Condition="'$(UseMicrosoftNETCoreAppInsertionWorkaround)' == ''">true</UseMicrosoftNETCoreAppInsertionWorkaround>
  </PropertyGroup>

  <ItemGroup Condition="'$(UseMicrosoftNETCoreAppInsertionWorkaround)' == 'true'">
    <PackageReference Include="Microsoft.NETCore.App.Insertion" Version="$(MNAVersion)" />
  </ItemGroup>

</Project>
